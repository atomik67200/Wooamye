{% extends 'layout.html.twig' %}

{% block title %}changerAcceuil{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/changerAccueil.css">
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="row ">
            <div class="col py-4 ">
                <h1 class="title">Ajouter un set</h1>
                <div class="row justify-content-center">
                    <div class="offset-1 col-3">
                        <button type="button" class="btn btn-lg btn-responsive">Changer set</button>
                    </div>
                    <div class="offset-4"></div>
                </div>
            </div>
        </header>
    </div>

    <form method="POST" action="changerAccueil">
        <textarea name="contenu" style="width: 100%; height: 200px;">
            {{ contenu }}
        </textarea>
        <input type="hidden" name="file" value="">
        <input type="submit" value="Envoyer">
    </form>

{% endblock %}

{% block javascript %}
{% endblock %}

