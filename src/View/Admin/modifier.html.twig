{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}

{% block header %}



{% endblock %}

    {% block content %}


        <div class="container-fluid " ">
            <header class="row ">
                <div class="col py-4 ">
                    <h1 class="title">Modifier un set</h1>
                    <div class="row justify-content-center">

                        <div class="offset-1 col-3">
                            <form class="" action="/changerAccueil" method="POST">
                                <button type="submit" class="btn btn-lg btn-responsive">Changer l'accueil</button>
                            </form>
                            <p> {{ errors }} </p>

                        </div>
                    </div>
                </div>
            </header>

            <p> {{ errors }} </p>
            <div class="row">
                <div class="px-2 py-4 ">
                    <section class="col-lg-12">
                        <form action="/redirection" method="POST">
                            <div class="row justify-content-center my-4">
                                <div class="offset-1 col-3">
                                    <div class="dropdown">
                                        <select class="btn btn-btn btn-responsive dropdown-toggle" name="selectAA" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                                <option class="dropdown-item" value="ajouter" selected="selected" type="button">Ajouter un Deck</option>
                                                <option class="dropdown-item" value="modifier" type="button">Modifier un Deck</option>
                                                <option class="dropdown-item" value="supprimer" type="button">Supprimer un Deck</option>
                                            </div>
                                        </select>
                                    </div>
                                </div>
                                <div class="offset-1 col-3">
                                    <button type="submit" class="btn btn- btn-responsive">Valider</button>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-12">
                                <form action="/modifier" method="GET">
                                    <select class="btn btn-btn btn-responsive dropdown-toggle" name="selectAA" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                            {% for decks in allDeck %}
                                                <option class="dropdown-item" value="{{ decks.decks }}" type="button">{{ decks.decks }}</option>
                                            {% endfor %}
                                        </div>
                                    </select>
                                        <button type="submit" class="btn btn-lg btn-responsive" name="nomDuDecks" >Charger le Deck</button>
                                </form>

                            </div>
                        </div>

                        <form  class="" id="" action="/updateBdd" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="nomDeck" value="dekk">
                            <div class="row justify-content-center my">


                            {% for personnage in personnages %}
                                <div class="col-md-3  mx-">

                                    <div class="thumbnail mb-2">
                                        <p><span class="titre">Image{{personnage.ID}}</span></p>

                                        <img src="{{personnage.image}}" alt="Image" class="img-thumbnail mb-2"><br>
                                        <div class="upload-btn-wrapper">
                                            <button class="btn1 btn-responsive">Parcourir</button>
                                            <input  name="files[]" type="file" id="fichier_a_uploader" multiple="multiple" />
                                            <input type="hidden" name="fichier1" value="1" />
                                        </div>
                                    </div>



                                    <div class="mx-5 mb-3" >
                                        <ul class="list-group">

                                            {% if personnage.cars.genre == "homme" %}
                                                <li class="list-group-item list-group-item-success">Homme</li>
                                            {% else %}
                                                <li class="list-group-item list-group-item-success">Femme</li>
                                            {% endif %}

                                            {% if personnage.cars.lunette == "oui" %}
                                                <li class="list-group-item list-group-item-success">Lunettes</li>
                                            {% else %}
                                                <li class="list-group-item list-group-item-danger">Pas de lunettes</li>
                                            {% endif %}

                                            {% if personnage.cars.barbe == "oui" %}
                                                <li class="list-group-item list-group-item-success">Barbe</li>
                                            {% else %}
                                                <li class="list-group-item list-group-item-danger">Pas de barbe</li>
                                            {% endif %}

                                            {% if personnage.cars.cheveux == "oui" %}
                                                <li class="list-group-item " style="background-color: rgba(179, 81, 59, 0.88)">Cheveux brun</li>
                                            {% else %}
                                                <li class="list-group-item list-group-item-warning">Cheveux blond</li>
                                            {% endif %}

                                            {% if personnage.cars.chapeau == "oui" %}
                                                <li class="list-group-item list-group-item-success">Chapeau</li>
                                            {% else %}
                                                <li class="list-group-item list-group-item-danger">Pas de chapeau</li>
                                            {% endif %}

                                            {% if personnage.cars.ral == "oui" %}
                                                <li class="list-group-item list-group-item-success">Rouge à lèvres</li>
                                            {% else %}
                                                <li class="list-group-item list-group-item-danger">Pas de rouge à lèvres</li>
                                            {% endif %}

                                        </ul>
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                            {% if personnages %}
                            <div class="row justify-content-center" id="Upl">
                                <div class="col py-4 ">
                                    <button type="submit" class="btn btn-lg btn-responsive" name="Uploader" value="Uploader">Modifier</button>
                                </div>
                            </div>
                            {% endif %}
                        </form>
                    </section>
                </div>
            </div>
        </div>

    {% endblock %}

    {%  block javascript %}

        <script src="assets/js/input.js"></script>

    {% endblock %}

